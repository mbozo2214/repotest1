<%= stylesheet_link_tag 'register-new', media: 'all', 'data-turbolinks-track': 'reload' %>
<h1 class="titulo has-text-centered is-size-1">Registrarse</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :'Correo Electrónico' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :'Nombre de Usuario' %><br />
    <%= f.text_field :nombre_usuario %>
  </div>

  <div class="field">
    <%= f.label :'Contraseña' %><br />
    <% if @minimum_password_length %>
    <em>(Mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :'Confirmar Contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h2 class="subtitulo has-text-centered is-size-3">Información de Contacto</h2>
  <div class="field">
    <%= f.label :'Nombre' %><br />
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :'Teléfono' %><br />
    <%= f.text_field :telefono %>
  </div>

  <%= f.hidden_field :ruta_img, value: '' %>
  <div class="field">
    <%= f.label :'¿Tipo de usuario?' %><br />
    <%= f.select :tipo_usuario, Usuario.tipo_usuarios.keys.map { |k| [k.titleize, Usuario.tipo_usuarios[k].to_i] } %>
  </div>
  <div class="actions">
    <%= button_tag(type: 'submit', class: 'button is-link') do %>
      Enviar
    <% end %>
  </div>
<% end %>


